" Enable syntax processing
syntax enable

" Set Colorscheme
colorscheme elflord

" Number of visual spaces per tab
set tabstop=4

" Number of spaces per tab when editing
set softtabstop=4

" Make tabs spaces
set expandtab

" Show line numbers
"set number

" Highlight cursor line
set cursorline

" Use filetype-specific indentation
filetype indent on

" Visual autocomplete menu
set wildmenu

" Highlight matching bracket
set showmatch
